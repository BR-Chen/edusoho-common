{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_information_collection_create' %}

{% block page_title %}
	{{ parent() }}
	<span class="">({{'admin_v2.information_collection.create.title_info'|trans}})</span>

{% endblock %}

{% block main %}
	<form class="form-horizontal information-collection" action="{{ path('admin_v2_information_collection_create') }}" method="post">
		<fieldset>
			<div class="row form-group">
				<div class="col-md-2 control-label">
					<label for="title">{{ 'admin_v2.information_collection.create.title'|trans }}</label>
				</div>
				<div class="col-md-5 controls">
					<input type="text" name="title" class="form-control" id="title">
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-2 control-label">
					<label for="type">{{ 'admin_v2.information_collection.create.action'|trans }}</label>
				</div>
				<div class="col-md-5 controls">
					<div class="radios">
						<label>
							<input type="radio" name="action" value="buy_before" checked="checked">{{ 'admin_v2.information_collection.create.action_before'|trans }}
							<label class="help-block display-inline">{{ 'admin_v2.information_collection.create.action_before.tip'|trans }}</label>
							<label class="help-block">({{ 'admin_v2.information_collection.create.action_before.help_block'|trans }})</label>
						</label>
						<label>
							<input type="radio" name="action" value="buy_after" checked="checked">{{ 'admin_v2.information_collection.create.action_after'|trans }}
							<label class="help-block">({{ 'admin_v2.information_collection.create.action_before.help_block'|trans }})</label>
						</label>
					</div>
				</div>
			</div>

			<div class="row form-group">
				<div class="col-md-2 control-label">
					<label for="">{{ 'admin_v2.information_collection.create.form_items'|trans }}</label>
				</div>
				<div class="col-md-5 control-label text-left">
					<div class="help-block margin-unset">{{ 'admin_v2.information_collection.create.form_items.tip'|trans }}</div>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-2 control-label"></div>
				<div class="col-md-5 controls">
					<div class="row form-group">
						<div class="col-md-4 control-label text-left">
							<label for="formTitle">{{ 'admin_v2.information_collection.create.form_items.code'|trans }}</label>
						</div>
						<div class="col-md-8 controls">
							<input type="text" name="formTitle" class="form-control" id="formTitle">
						</div>
					</div>
					<div class="cd-panel">
						<div class="cd-panel-body form-items-panel">
							<div class="cd-alert cd-alert-warning text-center">{{ 'admin_v2.information_collection.create.form_items.warning_tip'|trans }}</div>
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="cd-panel">
						<div class="cd-panel-body"></div>
					</div>
				</div>
			</div>
			<div class="row form-group">
				<label class="col-md-2 control-label">{{ 'admin_v2.information_collection.create.form_items.allow_skip'|trans }}</label>
				<div class="radios">
					<label>
						<input type="radio" name="allowSkip" value="1" checked="checked">{{ 'admin_v2.information_collection.create.form_items.skip.allow'|trans }}
					</label>
					<label>
						<input type="radio" name="allowSkip" value="0" checked="checked">{{ 'admin_v2.information_collection.create.form_items.skip.not_allow'|trans }}
					</label>
				</div>
			</div>
			<div class="row form-group">
				<label class="col-md-2 control-label">{{ 'admin_v2.information_collection.create.form_items.enable'|trans }}</label>
				<div class="radios">
					<label>
						<input type="radio" name="status" value="open" checked="checked">{{ 'form.radio_btn.true'|trans }}
					</label>
					<label>
						<input type="radio" name="status" value="close" checked="checked">{{ 'form.radio_btn.false'|trans }}
					</label>
				</div>
			</div>
		</fieldset>
	</form>
{% endblock %}
