{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_information_collect' %}
{% do script(['libs/jquery-validation.js','app/js/admin-v2/marketing/information-collect/edit/index.js']) %}
{% block page_title %}
	<div class="information-collect">
		<a class="color-black-title" href="javascript:;">{{ currentMenu.code|parent_permission.name|trans({}, 'menu') }}</a>
		>
		<a class="color-black-title" href="javascript:;">{{ 'admin_v2.information_collect.create'|trans }}{{ currentMenu.code|parent_permission.name|trans({}, 'menu') }}</a>
		<span class="help-block display-inline text-md">({{'admin_v2.information_collect.edit.title_info'|trans}})</span>
	</div>
{% endblock %}

{% block page_buttons %}{% endblock %}

{% block main %}
	<form class="form-horizontal information-collect" id="information-collect-form" action="{{ path('admin_v2_information_collect_edit') }}" method="post">
		<fieldset>
			<div class="row form-group">
				<div class="col-md-2 control-label">
					<label for="title">{{ 'admin_v2.information_collect.edit.title'|trans }}</label>
				</div>
				<div class="col-md-6 controls">
					<input required type="text" name="title" class="form-control" id="title">
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-2 control-label">
					<label for="type">{{ 'admin_v2.information_collect.edit.action'|trans }}</label>
				</div>
				<div class="col-md-6 controls">
					<div class="radio-for-action hidden">
						{% include "admin-v2/marketing/information-collect/edit/location.html.twig" %}
					</div>
					<div class="radios">
						<div class="js-action-radio">
							<label>
								<input type="radio" name="action" value="buy_before" checked="checked">
								<span>{{ 'admin_v2.information_collect.edit.action_before'|trans }}</span>
								<label class="help-block display-inline">{{ 'admin_v2.information_collect.edit.action_before.tip'|trans }}</label>
								<label class="help-block pll mb0">({{ 'admin_v2.information_collect.edit.action_before.help_block'|trans }})</label>
								<div class="js-checkbox-group plm"></div>
							</label>
						</div>
						<div class="js-action-radio">
							<label>
								<input type="radio" name="action" value="buy_after" checked="checked">
								<span>{{ 'admin_v2.information_collect.edit.action_after'|trans }}</span>
								<label class="help-block pll mb0">({{ 'admin_v2.information_collect.edit.action_after.help_block'|trans }})</label>
								<div class="js-checkbox-group plm">
									{% include "admin-v2/marketing/information-collect/edit/location.html.twig" %}
								</div>
							</label>
						</div>
					</div>
				</div>
			</div>

			<div class="row form-group">
				<div class="col-md-2 control-label">
					<label for="">{{ 'admin_v2.information_collect.edit.form_items'|trans }}</label>
				</div>
				<div class="col-md-5 control-label text-left">
					<div class="help-block margin-unset">{{ 'admin_v2.information_collect.edit.form_items.tip'|trans }}</div>
				</div>
			</div>
			<div class="row form-group">
				<div class="col-md-2 control-label"></div>
				<div class="col-md-6 controls">
					<div class="row form-group">
						<div class="col-md-4 control-label text-left">
							<label for="formTitle">{{ 'admin_v2.information_collect.edit.form_items.code'|trans }}</label>
						</div>
						<div class="col-md-8 controls">
							<input type="text" name="formTitle" class="form-control" id="formTitle">
						</div>
					</div>
					<div class="cd-panel">
						<div class="cd-panel-body form-items-panel">
							<div class="cd-alert cd-alert-warning text-center">{{ 'admin_v2.information_collect.edit.form_items.warning_tip'|trans }}</div>
						</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="cd-panel">
						<div class="cd-panel-body">
							{% include "admin-v2/marketing/information-collect/edit/items.html.twig" %}
						</div>
					</div>
				</div>
			</div>
			<div class="row form-group">
				<label class="col-md-2 control-label">{{ 'admin_v2.information_collect.edit.form_items.allow_skip'|trans }}</label>
				<div class="radios">
					<label>
						<input type="radio" name="allowSkip" value="1" checked="checked">
						<span>{{ 'admin_v2.information_collect.edit.form_items.skip.allow'|trans }}</span>
					</label>
					<label>
						<input type="radio" name="allowSkip" value="0" checked="checked">
						<span>{{ 'admin_v2.information_collect.edit.form_items.skip.not_allow'|trans }}</span>
					</label>
				</div>
			</div>
			<div class="row form-group">
				<label class="col-md-2 control-label">{{ 'admin_v2.information_collect.edit.form_items.enable'|trans }}</label>
				<div class="radios">
					<label>
						<input type="radio" name="status" value="open" checked="checked">
						<span>{{ 'form.radio_btn.true'|trans }}</span>
					</label>
					<label>
						<input type="radio" name="status" value="close" checked="checked">
						<span>{{ 'form.radio_btn.false'|trans }}</span>
					</label>
				</div>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
			<div class="row text-center">
				<button type="button" class="btn btn-primary js-save-btn col-md-4 col-md-offset-4" data-loading-text="{{ 'form.btn.submit.submiting'|trans }}">{{ 'form.btn.submit'|trans }}</button>
			</div>
		</fieldset>
	</form>
{% endblock %}
