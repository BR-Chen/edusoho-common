<div class="radios">
	<div class="action-type-group">
		<label>
			<input type="radio" name="actionType" value="all" checked="checked">
			<span>{{ 'admin_v2.information_collect.edit.target_type.all'|trans }}</span>
			<label class="help-block display-inline">
				{{ 'admin_v2.information_collect.edit.target_type.tip'|trans }}
			</label>
			<div class="js-target-type-checkbox-group hidden">
				<div class="target-type-checkbox">
					<label class="pll">
						<input type="checkbox" name="targetTypes[]" value="course">
						<span>{{ 'admin_v2.information_collect.edit.target_type.all_course'|trans }}</span>
						<span class="text-muted display-inline hidden">
							({{ 'admin_v2.information_collect.binded_tips'|trans }},<a href=''>{{ 'admin_v2.information_collect.more'|trans }}</a>)
						</span>
					</label>
				</div>
				<div class="target-type-checkbox">
					<label class="pll">
						<input type="checkbox" name="targetTypes[]" value="classroom" disabled>
						<span class="text-muted">{{ 'admin_v2.information_collect.edit.target_type.all_classroom'|trans }}</span>
						<span class="text-muted display-inline">
							({{ 'admin_v2.information_collect.binded_tips'|trans }},<a href=''>{{ 'admin_v2.information_collect.more'|trans }}</a>)
						</span>
					</label>
				</div>
			</div>
		</label>
	</div>

	<div class="action-type-group">
		<label>
			<input type="radio" name="actionType" value="part" checked="checked">
			<span>{{ 'admin_v2.information_collect.edit.target_type.part'|trans }}</span>
			<div class="js-target-type-checkbox-group">
				<div class="target-type-checkbox">
					<label class="pll">
						<input type="checkbox" name="targetTypes[]" value="course">
						<input class="target-ids" type="hidden" name="courseIds" value="">
						<span>{{ 'admin_v2.information_collect.edit.target_type.part_course'|trans }}</span>
						<span class="display-inline">
							{{ 'admin_v2.information_collect.selected_course_count'|trans }}<span class="selected-course-count">
								0
							</span>
							[<a class="js-select-target" data-url="{{ path('admin_v2_information_collect_event_target_modal', {type: 'course'}) }}" data-toggle="modal" data-target="#modal">{{ 'admin_v2.information_collect.selecte_course'|trans }}]</a>
						</span>
					</label>
				</div>
				<div class="target-type-checkbox">
					<label class="pll">
						<input type="checkbox" name="targetTypes[]" value="classroom">
						<input class="target-ids" type="hidden" name="classroomIds" value="">
						<span>{{ 'admin_v2.information_collect.edit.target_type.part_classroom'|trans }}</span>
						<span class="display-inline">
							{{ 'admin_v2.information_collect.selected_classroom_count'|trans }}<span class="selected-classroom-count">
								0
							</span>
							[<a class="js-select-target" data-url="{{ path('admin_v2_information_collect_event_target_modal', {type: 'classroom'}) }}" data-toggle="modal" data-target="#modal">{{ 'admin_v2.information_collect.selecte_classroom'|trans }}]</a>
						</span>
					</label>
				</div>
			</div>
		</label>
	</div>
</div>
