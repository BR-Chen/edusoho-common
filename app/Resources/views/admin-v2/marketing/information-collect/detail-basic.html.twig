<div class="panel-heading clearfix">
  <span class="h3 pull-left panel-title" style="margin-top: 7px">{{ 'admin.information_collect.basic_info'|trans }}</span>
  <button class="btn btn-primary pull-right hidden-xs">{{ 'admin.information_collect.update_btn'|trans }}</button>
  <button id="close-collect" class="btn btn-primary pull-right hidden-xs {% if event.status != 'open' %}hidden{% endif%}" style="margin-right: 10px" data-url="{{ path('admin_v2_information_collect_close', {id: event.id}) }}">{{ 'admin.information_collect.close_btn'|trans }}</button>
  <button id="open-collect" class="btn btn-primary pull-right hidden-xs {% if event.status == 'open' %}hidden{% endif%}" style="margin-right: 10px" data-url="{{ path('admin_v2_information_collect_open', {id: event.id}) }}">{{ 'admin.information_collect.open_btn'|trans }}</button>
</div>
<div class="panel-body">
  <table class="table table-noborder" style="margin-bottom: 0">
    <tr>
      <td width="8%">{{ 'admin.information_collection.title_th'|trans }}：</td>
      <td width="40%">
        <span style="cursor: pointer" {% if event.title|length > 30 %}title="{{ event.title }}"{% endif %}>
              {{ event.title | slice(0,30) }}{% if event.title|length >30 %}...{% endif %}
        </span>
      </td>
      <td width="10%">{{ 'admin.information_collection.status_th'|trans }}：</td>
      <td>
        {% set statusInfo = 'admin.information_collect.status.' ~ event.status %}
        {{ statusInfo|trans|raw }}
      </td>
    </tr>
    <tr>
      <td width="8%">{{ 'admin.information_collect.location_th'|trans }}：</td>
      <td width="40%">
        {% set location = information_collect_location_info(event.id) %}
        {{ event.formTitle }}
        <br>
        <span class="text-muted text-sm" style="cursor: pointer" {% if location|length > 40 %}title="{{ location }}"{% endif %}>{{ location | slice(0,40) }}{% if location|length >40 %}...{% endif %}</span>
      </td>
      <td width="10%">{{ 'admin.information_collect.collected_num_th'|trans }}：</td>
      <td>{{ 'admin.information_collect.collected_num'|trans({'%collectedNum%':collectedNum[event.id].collectNum|default(0)}) }}</td>
    </tr>
    <tr>
      <td width="8%">{{ 'admin.information_collect.create_time_th'|trans }}：</td>
      <td width="40%">{{ event.createdTime|date('Y-m-d H:i:s') }}</td>
    </tr>
    <tr>
      <td width="8%">{{ 'admin.information_collect.creator'|trans }}：</td>
      <td width="40%">{{ creator.nickname }}</td>
    </tr>
  </table>
</div>