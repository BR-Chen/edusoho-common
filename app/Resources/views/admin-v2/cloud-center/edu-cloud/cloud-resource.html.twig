{% extends 'admin-v2/layout.html.twig' %}
	 {% set menu = 'admin_v2_cloud_resources_setting' %}
	 {%  do script(['app/js/admin-v2/edu-cloud/resource/index.js'])  %}
	 {% block main %}
     <div class="edu-service">
       {% if info.accessCloud|default(0) == 0 or setting('storage.upload_mode') == 'local' or info.hasStorage == 0 %}
         <div class="text-center">
           <div class="error-content" style="padding: 100px 100px">
             <h4>
               {{ 'admin.edu_cloud.edu_resource.resource_tips'|trans({'%videoUrl%': path('admin_v2_edu_cloud_video_overview'), '%detailUrl%': 'http://open.edusoho.com/show/cloud/video'})|raw }}
           </div>
         </div>
       {% else %}

         <div class="edu-balance">
           {{ web_macro.flash_messages() }}
           <form id="cloud-resource" class="form-horizontal" method="post" data-widget-cid="widget-0">
             <div class="form-group">
               <div class="col-md-3 control-label">
                 <label>{{ 'admin.edu_cloud.edu_resource.download.setting'|trans }}</label>
               </div>
               <div class="controls col-md-8 radios">
                 <label>
                   <input type="radio" name="enable"
                          value="1" {% if resource.enable %} checked {% endif %}> {{ 'admin.edu_cloud.edu_resource.open_radio'|trans }}
                 </label>
                 <label>
                   <input type="radio" name="enable"
                          value="0" {% if not resource.enable %} checked {% endif %}>{{ 'admin.edu_cloud.edu_resource.close_radio'|trans }}
                 </label>
               </div>
               <div class="help-block col-md-8 col-md-offset-3">
                   <span id="enableTips" {% if not resource.enable %} hidden {% endif %}>{{ 'admin.edu_cloud.edu_resource.download.setting.enable.tips'|trans }}</span>
                   <span id="disableTips" {% if resource.enable %} hidden {% endif %}>{{ 'admin.edu_cloud.edu_resource.download.setting.disable.tips'|trans }}</span>
                 </div>
             </div>
             <div class="row form-group">
               <div class="controls col-md-offset-3 col-md-8">
                 <button type="submit" class="btn btn-primary">{{ 'form.btn.submit'|trans }}</button>
               </div>
             </div>
             <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
           </form>
         </div>
       {% endif %}

     </div>
   {% endblock %}