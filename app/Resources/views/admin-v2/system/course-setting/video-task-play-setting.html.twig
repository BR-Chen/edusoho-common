{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_task_multiple_open_setting' %}

{% do script(['app/js/admin-v2/system/video-task-play/index.js']) %}

{% block main %}
  <form class="form-horizontal" method="post" id="video-play-form" novalidate>
    <fieldset>
      <legend>{{ 'admin.setting_course.video_play_setting.multiple_open'|trans }}</legend>
      <div class="form-group">
        <div class="col-md-3 control-label">
          <label >{{'admin.setting_course.video_play_setting.same_video_multiple'|trans}}</label>
        </div>
        <div class="controls col-md-8 radios">
          {{ radios('same_video_multiple', {1:'admin.setting_course.allow'|trans, 0:'admin.setting_course.not_allow'|trans}, videoSetting.same_video_multiple) }}
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-3 control-label">
          <label >{{'admin.setting_course.video_play_setting.different_video_multiple'|trans}}</label>
        </div>
        <div class="controls col-md-8 radios">
          {{ radios('different_video_multiple', {1:'admin.setting_course.allow'|trans, 0:'admin.setting_course.not_allow'|trans}, videoSetting.different_video_multiple) }}
        </div>
      </div>

      <div class="form-group js-effect-show {% if videoSetting.different_video_multiple == 1 and videoSetting.same_video_multiple == 1 %}hidden{% endif %}">
        <div class="col-md-3 control-label">
          <label >{{'admin.setting_course.video_play_setting.multiple_forbidden_effect'|trans}}</label>
        </div>
        <div class="controls col-md-8 radios">
          {{ radios('multiple_forbidden_effect', {'kick_previous':'admin.setting_course.video_play_setting.kick_previous_play'|trans, 'reject_current':'admin.setting_course.video_play_setting.reject_current_play'|trans}, videoSetting.multiple_forbidden_effect) }}
        </div>
      </div>
    </fieldset>

    <fieldset>
      <legend>{{ 'admin.setting_course.video_play_setting.ineffective_learning'|trans }}</legend>
      <div class="form-group">
        <div class="col-md-3 control-label">
          <label >{{'admin.setting_course.video_play_setting.play_rule'|trans}}</label>
          <a data-toggle="tooltip" data-placement="top" data-container="body" title="{{ 'admin.setting_course.video_play_setting.play_rule.tips'|trans }}"><i class="es-icon es-icon-help"></i></a>
        </div>
        <div class="controls col-md-8 radios">
          {{ radios('play_rule', {'auto_pause':'admin.setting_course.video_play_setting.play_rule.auto_pause'|trans, 'no_action':'admin.setting_course.video_play_setting.play_rule.no_action'|trans}, videoSetting.play_rule) }}
        </div>
      </div>
    </fieldset>

    <div class="row form-group">
      <div class="col-md-2 control-label"></div>
      <div class="controls col-md-8">
        <button type="submit" class="btn btn-primary js-setting-submit">{{'form.btn.submit'|trans}}</button>
      </div>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
  </form>
{% endblock %}