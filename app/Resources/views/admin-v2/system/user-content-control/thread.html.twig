{% extends 'admin-v2/layout.html.twig' %}

{% set menu = 'admin_v2_user_content_control_thread' %}

{% do script(['libs/jquery-validation.js', 'app/js/admin-v2/system/user-content-control/thread/index.js']) %}
{% block main %}
  <form class="form-horizontal" id="user_content_control_thread" method="post" novalidate>
    <legend style="height: 50px;">
      <div class="row form-group">
        <div class="col-md-2 " style="padding-top: 5px;"><label>{{ 'admin_v2.system.user_content_control.thread_manage'|trans }}ï¼š</label></div>
        <div class="col-md-9 col-md-pull-1 controls radios">
          {{ radios('show_note_thread', {1:'site.datagrid.radios.open'|trans, 0:'site.datagrid.radios.close'|trans}, userContentControl.show_review|default('1')) }}
        </div>
      </div>
    </legend>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="">{{ 'admin_v2.system.user_content_control.course_question_manage'|trans }}</label>
      </div>
      <div class="col-md-10 controls radios">
        {{ radios('show_note_question', {1:'site.datagrid.radios.open'|trans, 0:'site.datagrid.radios.close'|trans}, userContentControl.show_review|default('1')) }}
        <label><a href="">{{ 'admin_v2.system.user_content_control.goto_question_manage'|trans }}</a></label>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="">{{ 'admin_v2.system.user_content_control.classroom_question_manage'|trans }}</label>
      </div>
      <div class="col-md-10 controls radios">
        {{ radios('show_note_classroom', {1:'site.datagrid.radios.open'|trans, 0:'site.datagrid.radios.close'|trans}, userContentControl.show_review|default('1')) }}
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="">{{ 'admin_v2.system.user_content_control.course_thread_manage'|trans }}</label>
      </div>
      <div class="col-md-10 controls radios">
        {{ radios('show_note', {1:'site.datagrid.radios.open'|trans, 0:'site.datagrid.radios.close'|trans}, userContentControl.show_review|default('1')) }}
        <label><a href="">{{ 'admin_v2.system.user_content_control.goto_thread_manage'|trans }}</a></label>
        <div class="help-block">{{ 'admin_v2.system.user_content_control.pc_app_switch_tips'|trans }}</div>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="">{{ 'admin_v2.system.user_content_control.classroom_thread_manage'|trans }}</label>
      </div>
      <div class="col-md-10 controls radios">
        {{ radios('show_note', {1:'site.datagrid.radios.open'|trans, 0:'site.datagrid.radios.close'|trans}, userContentControl.show_review|default('1')) }}
        <div class="help-block">{{ 'admin_v2.system.user_content_control.pc_app_switch_tips'|trans }}</div>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-md-2 control-label">
        <label for="">{{ 'admin_v2.system.user_content_control.group_thread_manage'|trans }}</label>
      </div>
      <div class="col-md-10 controls radios">
        {{ radios('show_note', {1:'site.datagrid.radios.open'|trans, 0:'site.datagrid.radios.close'|trans}, userContentControl.show_review|default('1')) }}
        <label><a href="">{{ 'admin_v2.system.user_content_control.goto_group_thread_manage'|trans }}</a></label>
        <div class="help-block">{{ 'admin_v2.system.user_content_control.pc_switch_tips'|trans }}</div>
      </div>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
        <a class="btn btn-primary mtl js-thread-setting-save-btn" data-loading-text="{{ 'form.btn.save.submiting'|trans }}">{{ 'form.btn.submit'|trans }}</a>
      </div>
    </div>
  </form>
{% endblock %}
