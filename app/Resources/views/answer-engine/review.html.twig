{% extends 'layout.html.twig' %}

{% do script(['app/js/answer-engine/review/index.js']) %}

{% block title %}{{ assessment.name }} - {{ parent() }}{% endblock %}

{% block body %}
    {% block header %}
        {% if showHeader|default(1) %}{{ parent() }}{% endif %}
    {% endblock %}

    {% include 'answer-engine/common.html.twig' %}
    {% include 'attachment-upload/upload-data.html.twig' %}
    <input type="hidden" name="assessment" value='{{ assessment|json_encode|raw }}'>
    <input type="hidden" name="answer_record" value='{{ answerRecord|json_encode|raw }}'>
    <input type="hidden" name="answer_scene" value='{{ answerScene|json_encode|raw }}'>
    <input type="hidden" name="answer_report" value='{{ answerReport|json_encode|raw }}'>
    <input type="hidden" name="success_goto_url" value='{{ successGotoUrl }}'>
    <input type="hidden" name="success_continue_goto_url" value='{{ successContinueGotoUrl }}'>
    {% block footer %}
        {% if showHeader|default(1) %}{{ parent() }}{% endif %}
    {% endblock %}
{% endblock %}