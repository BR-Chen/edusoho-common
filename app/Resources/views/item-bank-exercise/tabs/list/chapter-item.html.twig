{% if chapter.depth == 2 %}
{% set type = 'unit' %}
{% elseif chapter.depth == 1 %}
{% set type = 'chapter' %}
{% endif %}

<li id="chapter-{{chapter.id}}" class="task-manage-item js-task-manage-{{type}} task-manage-{{type}}" style="box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.06);">
  {% if type == 'unit' %}
    <div class="item-line"></div>
  {% endif %}
    {% if type == 'chapter' %}
      <div class="js-toggle-show js-toggle-{{ type }} title" style="display: inline-block;padding: 18px;">
        <span style="font-weight:400;color:rgba(51,51,51,1);">{{ chapter.name }}</span>
      </div>
    {% else %}
      <div class="item-content title gray-dark" style="display: inline-block;padding: 20px;">
        <span class="cd-link-assist" style="margin-left: 8px;font-weight:400;color:rgba(102,102,102,1);">{{ chapter.name }}</span>
      </div>
    {% endif %}
  {% include 'item-bank-exercise/tabs/list/chapter-button.html.twig' with {'question_num': chapter.question_num, 'member':member|default(null), record:record} %}
</li>


