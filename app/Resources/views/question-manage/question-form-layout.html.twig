{% extends 'question-bank/question/index.html.twig' %}

{% do script(['app/js/question-manage/form/index.js']) %}

{% block container %}

<div class="panel panel-default panel-col">
  <div class="panel-body">
    <div id="question-creator-widget">
      {% verbatim %}
        <div id="app">
        </div>
      {% endverbatim %}
      <input type="hidden" name="mode" value="{{ mode }}">
      <input type="hidden" name="bank_id" value="{{ questionBank.id }}">
      <input type="hidden" name="type" value="{{ type }}">
      <input type="hidden" name="create_url" value="{{ path('question_bank_manage_question_create', {id: questionBank.id, type: type}) }}">
      <input type="hidden" name="back_url" value="{{ path('question_bank_manage_question_list', {id: questionBank.id}) }}">
      <input type="hidden" name="image_upload_url" value="{{ path('editor_upload', {token:upload_token('course')}) }}">
      <input type="hidden" name="image_download_url" value="{{ path('editor_download', {token:upload_token('course')}) }}">
      <input type="hidden" name="category" value="{{ categoryTree|json_encode }}">
      {% if mode == 'edit' %}
        <input type="hidden" name="update_url" value="{{ path('question_bank_manage_question_update', {id: questionBank.id, questionId: item.id}) }}">
        <input type="hidden" name="item" value="{{ item|json_encode }}">
      {% endif %}
    </div>
  </div>
</div>

{% endblock %}

{% block question_category_modal %}{% endblock %}