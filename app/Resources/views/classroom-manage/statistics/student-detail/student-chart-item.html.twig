{% set courseMembers = member.courseMembers|default([]) %}
{% for course in classroomCourses %}
    {% set courseMember = courseMembers[course.id]|default(null) %}
    <li  data-toggle="popover"
         data-trigger="hover"
         data-placement="top"
         data-html="true"
         data-delay="100"
         data-content="">
