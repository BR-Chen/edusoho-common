{#                    {% endif %}#}
{#                    </div>">#}
        {% if courseMember %}
            {% if courseMember.isLearned %}
              {% set colorClass = 'finish-color' %}
            {% elseif courseMember.startLearnTime %}
              {% set colorClass = 'start-color' %}
            {% else %}
              {% set colorClass = 'learn-color' %}
            {% endif %}
            <i class="{{ colorClass }}"></i>
        {% else %}
          <i class="learn-color"></i>
        {% endif %}
    </li>
{% endfor %}